                        "schema": {
                            "$ref": "#/components/schemas/DeactivatedWorkflowResponseObject"
                        }
                    }
                }
            },
            "404": {
                "description": "not found",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "code": {
                                    "description": "http error code",
