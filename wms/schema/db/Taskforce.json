{
    "type": "object",
    "properties": {
        "taskforce_uuid": {
            "type": "string",
            "description": "the unique ID for this taskforce object (auto-created)"
        },
        "task_id": {
            "type": "string",
            "description": "the ID of the associated task directive object (N taskforces : 1 task directive)"
        },
        "workflow_id": {
            "type": "string",
            "description": "the ID of the encompassing workflow object (N*M taskforces : M task directive : 1 workflow)"
        },
        "timestamp": {
            "type": "number",
            "description": "the time (epoch) when this taskforce object was created"
        },
        "collector": {
            "type": "string",
            "description": "the HTCondor collector address"
        },
        "schedd": {
            "type": "string",
            "description": "the HTCondor schedd address"
        },
        "n_workers": {
            "anyOf": [
                {
                    "type": "integer",
                    "description": "the number of workers for this taskforces's HTCondor cluster (immutable)"
                },
                {
                    "type": "null"
                }
            ]
        },
        "pilot_config": {
            "type": "object",
            "description": "configuration for the EWMS pilot",
            "properties": {
                "image": {
                    "type": "string",
                    "description": "the images tag to use ('v#.#.#' or 'latest'): useful for repeatability",
                    "pattern": "^(v[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3})|(latest)$"
                },
                "environment": {
                    "type": "object",
                    "description": "environment variables and values",
                    "additionalProperties": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "integer"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "minItems": 1
                            }
                        ]
                    },
                    "minProperties": 0
                },
                "input_files": {
                    "type": "array",
                    "description": "paths to files to make available to the task container -- must already be accessible on the AP",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 0
                }
            },
            "additionalProperties": false,
            "required": [
                "image",
                "environment",
                "input_files"
            ]
        },
        "worker_config": {
            "type": "object",
            "description": "configuration for the HTCondor cluster submission",
            "properties": {
                "do_transfer_worker_stdouterr": {
                    "type": "boolean",
                    "description": "whether to transfer back the workers' stdout and stderr (accessible on the AP)"
                },
                "max_worker_runtime": {
                    "type": "integer",
                    "description": "the maximum runtime for a worker -- adjust for optimization (may want to kill slow CPUs)"
                },
                "n_cores": {
                    "type": "integer",
                    "description": "the number of cores to request per HTCondor worker"
                },
                "priority": {
                    "type": "integer",
                    "description": "the HTCondor priority"
                },
                "worker_disk": {
                    "type": "string",
                    "description": "the amount of disk to request per HTCondor worker"
                },
                "worker_memory": {
                    "type": "string",
                    "description": "the amount of memory to request per HTCondor worker"
                }
            },
            "additionalProperties": false,
            "required": [
                "do_transfer_worker_stdouterr",
                "max_worker_runtime",
                "n_cores",
                "priority",
                "worker_disk",
                "worker_memory"
            ]
        },
        "cluster_id": {
            "anyOf": [
                {
                    "type": "integer",
                    "description": "the ID for the associated HTCondor cluster"
                },
                {
                    "type": "null"
                }
            ]
        },
        "submit_dict": {
            "type": "object",
            "description": "the actual HTCondor submit class ad",
            "additionalProperties": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "integer"
                    }
                ]
            },
            "minProperties": 0
        },
        "job_event_log_fpath": {
            "type": "string",
            "description": "the filepath on the HTCondor AP containing job event logs"
        },
        "condor_complete_ts": {
            "anyOf": [
                {
                    "type": "integer",
                    "description": "the time (epoch) when the HTCondor cluster completed; null if not complete"
                },
                {
                    "type": "null"
                }
            ]
        },
        "phase": {
            "type": "string",
            "description": "the phase the taskforce is in for the workflow's lifetime (not all taskforces will be in every phase)",
            "enum": [
                "pre-mq-activation",
                "pre-launch",
                "pending-starter",
                "condor-submit",
                "pending-stopper",
                "condor-rm"
            ]
        },
        "compound_statuses": {
            "type": "object",
            "description": "an aggregated status of the workers (double-dictionary), mapping HTCondor state to EWMS pilot state to count",
            "additionalProperties": {
                "type": "object",
                "additionalProperties": {
                    "type": "integer",
                    "description": ""
                },
                "minProperties": 0
            },
            "minProperties": 0
        },
        "top_task_errors": {
            "type": "object",
            "description": "the top errors for all workers, paired with the count",
            "additionalProperties": {
                "type": "integer",
                "description": ""
            },
            "minProperties": 0
        }
    },
    "required": [
        "taskforce_uuid",
        "task_id",
        "workflow_id",
        "timestamp",
        "collector",
        "schedd",
        "n_workers",
        "pilot_config",
        "worker_config",
        "cluster_id",
        "submit_dict",
        "job_event_log_fpath",
        "condor_complete_ts",
        "phase",
        "compound_statuses",
        "top_task_errors"
    ],
    "additionalProperties": false
}
